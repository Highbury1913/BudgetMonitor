div.navbar(layout="column", layout-fill, ng-controller='NavbarCtrl')
  md-toolbar
    .md-toolbar-tools
      md-button(href='/')
        span Budget Monitor
      span(flex) &nbsp;
      md-button(ng-href='/signup', ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
        span(layout="row" layout-align="start center")
          md-icon.s24(md-svg-src="/assets/images/signup.svg")
          span.pad-left(hide-sm) Sign up
      md-button(ng-href='/login', ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
        span(layout="row" layout-align="start center")
          md-icon.s24(md-svg-src="/assets/images/login.svg")
          span.pad-left(hide-sm) Login
      md-button(ng-href='/settings', ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
        span(layout="row" layout-align="start center")
          md-icon.s24(md-svg-src="/assets/images/settings.svg")
          span.pad-left(hide-sm) Settings
      md-button(ng-href='', ng-click='logout()', ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
        span(layout="row" layout-align="start center")
          md-icon.s24(md-svg-src="/assets/images/logout.svg")
          span.pad-left(hide-sm) Logout
