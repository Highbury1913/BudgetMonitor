md-bottom-sheet.md-list.md-has-header
  h3 "{{currentBudget.name}}" actions
  md-list
    md-item
      md-button(aria-label="edit", ng-click="showBudgetEditor($event, 'edit')",
        layout-fill, layout="row", layout-align="space-around center")
        md-icon.s32(icon="/assets/images/edit.svg")
        span(style="min-width: 200px; text-align: left;") &nbsp;Edit
        span(flex)
    md-item
      md-button(aria-label="delete", ng-click="confirmDelete($event)",
        layout-fill, layout="row", layout-align="space-around center")
        md-icon.s32(icon="/assets/images/delete.svg")
        span(style="min-width: 200px; text-align: left;") &nbsp;Delete
        span(flex)
